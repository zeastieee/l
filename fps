local FPSCounterGui = Instance.new("ScreenGui")
local FPSCounterText = Instance.new("TextLabel")
 
FPSCounterGui.Name = "FPSCounterGui"
FPSCounterGui.Parent = game.CoreGui

FPSCounterText.Name = "FPSCounterText"
FPSCounterText.Parent = FPSCounterGui
FPSCounterText.BackgroundColor3 = Color3.new(1, 1, 1)
FPSCounterText.BackgroundTransparency = 1
FPSCounterText.Position = UDim2.new(0.0125740757, 0, 0.0907245204, 0)
FPSCounterText.Size = UDim2.new(0.0366689675, 0, 0.0186825544, 0)
FPSCounterText.Font = Enum.Font.SourceSansBold
FPSCounterText.Text = "60 FPS"
FPSCounterText.TextColor3 = Color3.new(1, 1, 1)
FPSCounterText.TextScaled = true
FPSCounterText.TextSize = 14
FPSCounterText.TextStrokeTransparency = 0
FPSCounterText.TextWrapped = true
FPSCounterText.TextXAlignment = Enum.TextXAlignment.Right

local fps = 0
local rs = game:GetService'RunService'

function updateFPS()
	fps = fps + 1
end

rs.RenderStepped:connect(updateFPS)

while wait'1' do
	script.Parent.Text = fps .." FPS"
	fps = 0
end
